<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frameLayout_demo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#96ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <Button
                style="?android:buttonBarButtonStyle"
                android:id="@+id/button_demo_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="SKIP"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/imageView_indicatorDemo"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/indicator_viewpager_1"/>
            </LinearLayout>
            <Button style="?android:buttonBarButtonStyle"
                android:id="@+id/button_demo_nextanddone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="NEXT"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

